{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,             // Permite archivos .js y .jsx
    "jsx": "react-jsx",           // Configuración JSX compatible con React
    "esModuleInterop": true,      // Habilita la interoperabilidad con módulos ES
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
